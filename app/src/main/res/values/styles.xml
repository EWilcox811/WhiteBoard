<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/themeMedium</item>
        <item name="colorPrimaryDark">@color/themeDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>

    <!-- ??? theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- ??? theme. -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- ??? theme. -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="TextLimitStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/themeLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NewCommentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">250</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:hint">Enter Comment Here</item>
    </style>
    <style name="ReplyToCommentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">250</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:hint">Enter Reply Here</item>
    </style>

    <style name="CustomToolbarStyle" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/themeMedium</item>
    </style>

</resources>