<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/progressiveSurveyQuestionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/progressive_filler"
            android:textStyle="bold"
            android:paddingHorizontal="5sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/classConfidenceLabelTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/class_confidence"
                android:textSize="@dimen/new_comment_text_size" />
            <TextView
                android:id="@+id/classConfidencePercentageTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/initial_seek_bar"
                android:paddingHorizontal="5sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>