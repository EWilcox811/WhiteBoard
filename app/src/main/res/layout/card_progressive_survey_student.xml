<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/progressiveSurveyQuestionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingHorizontal="5sp"
            android:text="@string/progressive_filler"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <SeekBar
                android:id="@+id/progressiveSurveySeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:thumbTint="@color/commentBlue"
                android:max="100"
                android:min="0"
                android:progressTint="@color/darkerBlue"
                android:progress="0"/>
            <TextView
                android:id="@+id/seekBarValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="5sp"
                android:textSize="@dimen/counter_text_size"
                android:text="@string/initial_seek_bar"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>