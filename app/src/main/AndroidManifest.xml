<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.nu.jam.capstone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ReplyToCommentActivity"
            android:screenOrientation="portrait"
            android:label="Reply To Comment"
            android:parentActivityName=".NavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavDrawerActivity" />
        </activity>
        <activity
            android:name=".InitialSurveyActivity"
            android:screenOrientation="portrait"
            android:label="Learning Style Summary"
            android:parentActivityName=".NavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavDrawerActivity" />
        </activity>
        <activity
            android:name=".MajorityConcernActivity"
            android:screenOrientation="portrait"
            android:label="Majority Concern"
            android:parentActivityName=".NavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavDrawerActivity" />
        </activity>
        <activity
            android:name=".PasswordRecoveryActivity"
            android:screenOrientation="portrait"
            android:label="Password Recovery"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".PasswordResetActivity"
            android:screenOrientation="portrait"
            android:label="Password Reset"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".SessionSelectionActivity"
            android:screenOrientation="portrait"
            android:label="Session Selection"
            android:parentActivityName=".NavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavDrawerActivity" />
        </activity>
        <activity
            android:name=".SurveySelectionActivity"
            android:screenOrientation="portrait"
            android:label="Survey Selection"
            android:parentActivityName=".NavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavDrawerActivity" />
        </activity>
        <activity
            android:name=".ViewRepliesActivity"
            android:screenOrientation="portrait"
            android:label="Comment Replies"
            android:parentActivityName=".NavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavDrawerActivity" />
        </activity>
        <activity
            android:name=".ProgressiveSurveyActivity"
            android:screenOrientation="portrait"
            android:label="Weekly Learning Objectives"
            android:parentActivityName=".NavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavDrawerActivity" />
        </activity>
        <activity
            android:name=".NewCommentActivity"
            android:screenOrientation="portrait"
            android:label="New Comment"
            android:parentActivityName=".NavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NavDrawerActivity" />
        </activity>

        <activity android:name=".NavDrawerActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>